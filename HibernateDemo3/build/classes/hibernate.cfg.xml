<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration>
	<session-factory>
		<property name="hbm2ddl.auto">update</property>
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/NR</property>
		<property name="hibernate.connection.username">ram</property>
		<property name="hibernate.connection.password">ram</property>
		
		
		<!-- its use to mapping the database  -->
		<!-- class Name is "PACKAGE NAME WITH CLASS NAME"  -->
		<mapping class="com.Product" />
	
	</session-factory>
</hibernate-configuration>